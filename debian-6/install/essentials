#!/bin/bash

. include/bootstrap-root

packages=(
  'adjtimex'
  'build-essential'
  'bzip2'
  'curl'
  'debhelper'
  'denyhosts'
  'gcc'
  'git'
  'git-core'
  'htop'
  'less'
  'libssl-dev'
  'make'
  'openssh-server'
  'openssl'
  'pari-gp'
  'screen'
  'sysstat'
  'vim'
  'zip'
);

echo -e $SERVERPLOP"Installing Linux essentials"
echo -e $SERVERPLOP"Selected packages: ${packages[@]}"

apt-get update -y >/dev/null 2>&1
apt-get install -y ${packages[@]} >/dev/null 2>&1

echo -e $SERVERPLOP"Finished Linux essentials"
