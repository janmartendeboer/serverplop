#!/bin/bash

# Exit the script when a command returns a non true value.
set -e
# Prevent using unset variables.
set -u

if [[ $EUID -ne 0 ]]; then
  echo "$0 must be run as root"
  exit 1
fi

apt-get update -y
apt-get install -y php-pear

pear config-set auto_discover 1
pear upgrade PEAR
pear upgrade pear.phpunit.de/PHPUnit
pear upgrade phpunit/DbUnit
pear upgrade phpunit/PHP_Invoker
pear upgrade phpunit/PHPUnit_Selenium
pear upgrade phpunit/PHPUnit_Story
pear upgrade phpunit/PHPUnit_SkeletonGenerator
pear config-set auto_discover 0
